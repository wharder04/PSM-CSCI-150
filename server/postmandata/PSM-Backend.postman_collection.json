      "name": "Auth",
      "item": [
        {
          "name": "Register A (owner)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "register"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Owner A\",\n  \"email\": \"{{emailA}}\",\n  \"password\": \"{{password}}\",\n  \"remember\": true\n}"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "",
                  "pm.test(\"201 Created\", ()=> pm.response.code === 201);",
                  "pm.test(\"Cookie set\", ()=> pm.cookies.has('psm_token'));",
                  "const user = pm.response.json().data?.user;",
                  "pm.expect(user).to.have.property('_id');",
                  "pm.environment.set('ownerUserId', user._id);"
                ]
              }
            },
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "",
                  "// ensure unique emails on each run",
                  "pm.environment.set('timestamp', String(Math.floor(Date.now()/1000)));",
                  "pm.environment.set('emailA', `owner+${pm.environment.get('timestamp')}@ex.com`);"
                ]
              }
            }
          ]
        },
